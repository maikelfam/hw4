<div class="container">
  <div>
    <h1><%= @place.name %></h1>
  </div>

  <div>
    <h2>My Posts</h2>
  </div>

  <div class="row">
    <% for post in @place.posts.where({user_id: @current_user.id}) %>
      <div class="col-md-4 col-sm-6">
        <h3><%= post.title %></h3>
        <h4><%= post.posted_on %></h4>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% end %>
        <p><%= post.description %></p>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <a class="btn btn-success" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
    <a class="btn btn-success" href="/places">Back to All Places</a>
  </div>
</div>